{
  "name": "apm",
  "version": "1.0.0",
  "description": "RESTful API boilerplate with Typescript, TypeORM, ExpressJs & Mocha.",
  "scripts": {
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "build": "rimraf dist && tsc",
    "start": "npm run migrations && node ./dist/index.js",
    "tsc": "tsc --noEmit",
    "migrations": "npx prisma migrate deploy",
    "format-lint": "prettier --config .prettierrc -l --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown .",
    "test": "NODE_PATH=./src mocha --require ts-node/register 'src/**/*.test.ts' --timeout 20000 --exit",
    "commit": "git-cz"
  },
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "pg": "^8.7.3",
    "prisma": "^4.10.1",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.33",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "commitizen": "^4.2.4",
    "jest": "^29.4.3",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsc-files": "^1.1.3",
    "typescript": "4.6.4"
  },
  "engines": {
    "node": "~16.14.0",
    "npm": "~  8.3.1"
  }
}
